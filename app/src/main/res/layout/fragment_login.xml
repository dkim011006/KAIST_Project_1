<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/inputid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:ems="10"
        android:hint="User Name"
        android:textSize="23sp" />

    <EditText
        android:id="@+id/inputpw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:ems="10"
        android:hint="PassWord"
        android:textSize="23sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttons"
        android:layout_below="@+id/inputpw"
        android:layout_marginTop="20sp"
        android:layout_centerHorizontal="true"
        >

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/btnsignin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="40sp"
            android:layout_weight="3"
            android:background="@drawable/bg_custom_filled"
            android:fontFamily="@font/poppins_light"
            android:gravity="center"
            android:text="Sign In"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/btnlogin"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40sp"
            android:fontFamily="@font/poppins_light"
            android:text="Log In"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textColor="@color/purple_500"
            android:background="@drawable/bg_custom_empty" />

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label"
        android:layout_below="@+id/buttons"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:textSize="23sp"
        android:hint=""/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttons_afterlogin"
        android:layout_below="@+id/label"
        android:layout_marginTop="20sp"
        android:layout_centerHorizontal="true"
        >

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/saveinfo"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:fontFamily="@font/poppins_light"
            android:layout_marginTop="40sp"
            android:text="Save Info"
            android:singleLine="false"
            android:autoSizeTextType="uniform"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_custom_filled"
            android:visibility="gone"/>

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/logout"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40sp"
            android:fontFamily="@font/poppins_light"
            android:text="Log Out"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textColor="@color/purple_500"
            android:background="@drawable/bg_custom_empty"
            android:visibility="gone" />

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>



</RelativeLayout>