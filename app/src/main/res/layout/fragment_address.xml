<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/listFragment"
    android:clickable="true">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="7">
           <ListView
               android:id="@+id/listview"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               tools:listitem="@layout/address_item_list">

           </ListView>
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_gravity="bottom"
           android:layout_weight="3"
           android:background="@drawable/bg_custom_button"
           android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1">

               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="2"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:padding="5dp"
                   android:text="Name"
                   android:textSize="15dp"
                   android:textStyle="bold"
                   android:textColor="@color/purple_500"
                   />

               <EditText
                   android:id="@+id/addCallbookName"
                   android:layout_width="0dp"
                   android:layout_weight="7"
                   android:layout_height="wrap_content" />
               <Space
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="match_parent"/>
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:orientation="horizontal">

               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="2"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:padding="5dp"
                   android:text="Num"
                   android:textSize="15dp"
                   android:textStyle="bold"
                   android:textColor="@color/purple_500" />

               <EditText
                   android:id="@+id/addCallbookNum"
                   android:layout_width="0dp"
                   android:layout_weight="7"
                   android:layout_height="wrap_content" />

               <Space
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="match_parent"/>
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1">

               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="2"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:padding="5dp"
                   android:text="Age"
                   android:textSize="15dp"
                   android:textStyle="bold"
                   android:textColor="@color/purple_500" />

               <EditText
                   android:id="@+id/addCallbookAge"
                   android:layout_width="0dp"
                   android:layout_weight="7"
                   android:layout_height="wrap_content" />
               <Space
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="match_parent"/>
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1">

               <TextView
                   android:layout_width="0dp"
                   android:layout_weight="2"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:padding="5dp"
                   android:text="Explain"
                   android:textSize="15dp"
                   android:textStyle="bold"
                   android:textColor="@color/purple_500" />

               <EditText
                   android:id="@+id/addCallbookExplain"
                   android:layout_width="0dp"
                   android:layout_weight="7"
                   android:layout_height="wrap_content" />
               <Space
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="match_parent"/>
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1.3"
               android:gravity="center">
               <Space
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"/>

               <Button
                   android:id="@+id/addCallbookButton"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="2"
                   android:text="ADD"
                   android:textStyle="bold" />
               <Space
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"/>

               <Button
                   android:id="@+id/clearCallbookButton"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="2"
                   android:text="Clear All"
                   android:singleLine="false"
                   android:autoSizeTextType="uniform"
                   android:textStyle="bold" />
               <Space
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"/>
           </LinearLayout>

       </LinearLayout>

   </LinearLayout>
</FrameLayout>